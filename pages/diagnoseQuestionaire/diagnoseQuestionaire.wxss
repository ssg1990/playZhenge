/* pages/diagnoseQuestionaire/diagnoseQuestionaire.wxss */
page{
  height: 100%; 
  overflow-y: hidden;
}
.diagnose-questionaire{
   height: 100%; 
}
.questionaire{
  margin-top: 126rpx;
  width: 674rpx;
  height: 2282rpx;
  margin-left: 38rpx;
  margin-right: 38rpx;
  border: 2rpx solid rgba(173,173,173,0.7);
  box-shadow: 0 0 8rpx 0 rgba(173,173,173,1);
  border-radius: 10rpx;
}
.title{
  text-align: center;
  margin-top: 84rpx;
  margin-bottom: 76rpx;
}
.main-title{
  font-size: 108rpx;
}
.sub-title{
  margin-top: 26rpx;
  font-size: 32rpx;
}

/* public style */
.padding-horizontal{
  padding-left: 42rpx;
  padding-right: 42rpx;
}

/* section style */
.section{
  display: flex;
  justify-content: space-between;
  margin-bottom: 36rpx;
}
.section-item{
  display: flex;
  font-size: 28rpx;
}
.item-name{
  width: 104rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.btn-group{
  display: flex;
}
.tab-btn{
  width: 76rpx;
  height: 60rpx;
  border-radius: 10rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.tab-btn image{
  width: 60rpx;
  height: 60rpx;
  flex: 1 0 0;
}
.first-btn{
  margin-right: 1rpx;
}
.section-text{
  width: 190rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #BBBBBB;
  border-radius: 10rpx;
  text-align: center;
}
.select{
  background-color: #5B96A8;
}
.order-submit{
  margin-top: 60rpx;
  width: 236rpx;
  height: 72rpx;
  border-radius: 12rpx;
  background-color: #259B24;
  border: none;
  color: #fff;
  line-height: 72rpx;
  font-size: 32rpx;
}

/* sports panel */
.sports-panel{
  margin-bottom: 36rpx;
}
.sports-title{
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.tri-tab{
  width: 590rpx;
  border: solid 2rpx #BBBBBB;
  border-radius: 10rpx;
  height:68rpx;
  display: flex;
}
.per-share{
  flex: 1 0 0;
  text-align: center;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #4A8294;
}
.tab-1{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-right: solid 2rpx #BBBBBB;
}
.tab-2{
  border-right: solid 2rpx #BBBBBB;
}
.tab-3{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.tab-selected{
  background: #5B96A8;
  color: #fff;
}

/* pain-panel */
.pain-panel{
  margin-bottom: 42rpx;
}
.pain-title{
  margin-bottom: 32rpx;
  font-size: 28rpx;
}
.pain-graph{
  position: relative;
  width: 590rpx;
  height: 752rpx;
  opacity: 0.97;
  border-radius: 16rpx;
  box-shadow: 0px 0px 1px 0px rgba(170, 170, 170, 1);
  margin-bottom: 18rpx;
}
.pain-graph .background-graph{
  position: absolute;
  border-radius: 16rpx;
  width: 590rpx;
  height: 752rpx;
  z-index: -1;
}
.pain-graph .avatar-canvas{
  position: absolute;
  width: 590rpx;
  height: 752rpx;
}
/* body-part */
.body-part-1 {
  left: 160rpx;
  top: 120rpx;
  width: 94rpx;
  height: 94rpx;
}
.body-part-2{
  left: 278rpx;
  top: 174rpx;
  width: 56rpx;
  height: 56rpx;
}
.body-part-3{
  left: 226rpx;
  top: 240rpx;
  width: 100rpx;
  height: 100rpx;
}
.body-part-4{
  left: 294rpx;
  top: 366rpx;
  width: 80rpx;
  height: 80rpx;
}
.body-part-5{
  left: 70rpx;
  top: 282rpx;
  width: 60rpx;
  height: 60rpx;
}
.body-part-6{
  left: 90rpx;
  top: 404rpx;
  width: 80rpx;
  height: 80rpx;
}
.body-part-7{
  left: 100rpx;
  top: 560rpx;
  width: 70rpx;
  height: 70rpx;
}
.body-part-selected{
  background-color: rgba(76, 158, 217, 1);
  opacity: 0.74;
}
.body-part-unselect{
  opacity: 0.34;
  background-color: rgba(229, 28, 35, 1);
}
.circle{
  position:absolute;
  border-radius: 200rpx;
}
/* end */

/* singleline-input */
.single-input{
  width: 590rpx;
  height: 92rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(16, 16, 16, 1);
  text-align: left;
  box-shadow: 0 0 2rpx 0 rgba(170, 170, 170, 1);
  display: flex;
}
.single-input .input-name{
  width: 130rpx;
  margin-top: 14rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}
.single-input .input-content{
  width: 404rpx;
  margin-top: 13rpx;
  height: 64rpx;
  color: rgba(136, 136, 136, 1);
  text-align: left;
  border: 1rpx solid rgba(222, 222, 222, 1);
  padding-left: 15rpx;
  padding-right: 15rpx;
}
/* end */
.modal{
  position: fixed;
  width: 100%;
  color: transparent;
  bottom: 0;
  top: 0;
  z-index: 100;
}
