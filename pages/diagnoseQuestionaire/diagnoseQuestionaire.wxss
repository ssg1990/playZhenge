/* pages/diagnoseQuestionaire/diagnoseQuestionaire.wxss */
.questionaire{
  margin-top: 126rpx;
  width: 674rpx;
  height: 2282rpx;
  margin-left: 38rpx;
  margin-right: 38rpx;
  border: 2rpx solid rgba(173,173,173,0.7);
  box-shadow: 0 0 8rpx 0 rgba(173,173,173,1);
  border-radius: 10rpx;
}
.title{
  text-align: center;
  margin-top: 84rpx;
  margin-bottom: 76rpx;
}
.main-title{
  font-size: 108rpx;
}
.sub-title{
  margin-top: 26rpx;
  font-size: 32rpx;
}

/* public style */
.padding-horizontal{
  padding-left: 42rpx;
  padding-right: 42rpx;
}

/* section style */
.section{
  display: flex;
  justify-content: space-between;
  margin-bottom: 36rpx;
}
.section-item{
  display: flex;
  font-size: 28rpx;
}
.item-name{
  width: 104rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.btn-group{
  display: flex;
}
.tab-btn{
  width: 76rpx;
  height: 60rpx;
  border-radius: 10rpx;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.tab-btn image{
  width: 60rpx;
  height: 60rpx;
  flex: 1 0 0;
}
.first-btn{
  margin-right: 1rpx;
}
.section-text{
  width: 190rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #BBBBBB;
  border-radius: 10rpx;
  text-align: center;
}
.select{
  background-color: #5B96A8;
}
.order-submit{
  margin-top: 60rpx;
  width: 236rpx;
  height: 72rpx;
  border-radius: 12rpx;
  background-color: #259B24;
  border: none;
  color: #fff;
  line-height: 72rpx;
  font-size: 32rpx;
}

/* sports panel */
.sports-panel{
  margin-bottom: 36rpx;
}
.sports-title{
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.tri-tab{
  width: 590rpx;
  border: solid 2rpx #BBBBBB;
  border-radius: 10rpx;
  height:68rpx;
  display: flex;
}
.per-share{
  flex: 1 0 0;
  text-align: center;
  line-height: 68rpx;
  font-size: 28rpx;
  color: #4A8294;
}
.tab-1{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  border-right: solid 2rpx #BBBBBB;
}
.tab-2{
  border-right: solid 2rpx #BBBBBB;
}
.tab-3{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.tab-selected{
  background: #5B96A8;
  color: #fff;
}

/* pain-panel */
.pain-panel{
  margin-bottom: 42rpx;
}
.pain-title{
  margin-bottom: 32rpx;
  font-size: 28rpx;
}
.pain-graph{
  width: 590rpx;
  height: 752rpx;
}
.pain-graph .slopingside{  
  height:0px;  
  border: 1px solid red;  
  width: 45px;  
  transform:rotate(125deg);
  -o-transform:rotate(125deg);  
  -moz-transform:rotate(125deg);  
  -webkit-transform:rotate(125deg);  
}  
.pain-graph .linear {  
  height:0px;   
  border: 1px solid red;  
  margin-left: 30px;  
  margin-top: -10px;  
}  
.pain-graph .background-graph{
  position: absolute;
  width: 590rpx;
  height: 752rpx;
  z-index: -1;
}
.pain-graph .avatar-canvas{
  position: absolute;
  width: 590rpx;
  height: 752rpx;
}
